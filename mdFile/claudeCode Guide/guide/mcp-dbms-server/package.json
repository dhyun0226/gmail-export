{
  "name": "mcp-dbms-server",
  "version": "1.0.0",
  "description": "MCP server for MySQL/MariaDB database metadata management",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mcp-dbms-server": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:bundle": "esbuild src/index.ts --bundle --platform=node --target=node18 --format=esm --external:mysql2 --outfile=dist/mcp-dbms-server-bundle.js",
    "start": "node dist/index.js",
    "start:bundle": "node dist/mcp-dbms-server-bundle.js",
    "dev": "tsx --watch src/index.ts",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "mcp",
    "database",
    "mysql",
    "mariadb",
    "metadata"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.1",
    "dotenv": "^16.4.5",
    "mssql": "^10.0.1",
    "mysql2": "^3.11.5",
    "oracledb": "^6.3.0",
    "pg": "^8.11.3",
    "winston": "^3.15.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/mssql": "^9.1.7",
    "@types/node": "^22.10.2",
    "@types/oracledb": "^6.6.0",
    "@types/pg": "^8.15.2",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "esbuild": "^0.25.5",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
